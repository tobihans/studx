FROM node:16 AS base

# Create app directory
RUN mkdir -p /opt/app
WORKDIR /opt/app

# Install app dependencies
COPY ./package*.json ./
RUN npm install

# Bundle frontend
COPY . ./
# COPY src ./src
# COPY assets ./assets
# COPY config ./config
RUN npm run build

#####################
# Final image
#####################

FROM node:16-alpine
ENV NODE_ENV=prod

# Create app directory
RUN mkdir -p /opt/app
WORKDIR /opt/app

COPY ./package*.json config.default.yml ./

RUN npm install

COPY scripts ./scripts
COPY --from=base /opt/app/dist ./dist

EXPOSE 8080
ENTRYPOINT ["npm", "run", "start"]
