:8081 {
	reverse_proxy http://whiteboard:8080
}

:9091 {
	reverse_proxy http://writepad:9090
}

:80 {
	encode gzip

	handle /writepad* {
		reverse_proxy http://writepad:9090
	}

	handle /ws/* {
		reverse_proxy http://rooms:5000
	}

	handle /api* {
		reverse_proxy http://api:6000
	}

	handle_path /media* {
		root * /api/media
		file_server
	}

	handle /* {
		root * /app/dist
		try_files {path} /index.html
		file_server
	}
}

